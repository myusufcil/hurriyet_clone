<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical">

<LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/side_nav_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
            android:id="@+id/nav_header_navigation_drawer_agenda"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="12dp"
            android:text="GÜNDEM"
            android:textSize="16dp"
            android:fontFamily="@font/arialbd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"/>

    <TextView
            android:id="@+id/nav_header_navigation_drawer_earth"
            android:alpha="0.6"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="16dp"
            android:text="DÜNYA"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"/>


    <TextView
            android:id="@+id/nav_header_navigation_drawer_european"
            android:alpha="0.6"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="16dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="AVRUPA"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"/>

    <TextView
            android:id="@+id/nav_header_navigation_drawer_turkey"
            android:alpha="0.6"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="16dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="TÜRKİYE"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"/>
    <TextView
            android:id="@+id/nav_header_navigation_drawer_germany"
            android:alpha="0.6"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="16dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="ALMANYA"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"/>
    <TextView
            android:id="@+id/nav_header_navigation_drawer_economy"
            android:alpha="0.6"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="16dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="EKONOMİ"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"/>
    <TextView
            android:id="@+id/nav_header_navigation_drawer_life"
            android:alpha="0.6"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="16dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="YAŞAM"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"/>
    <TextView
            android:id="@+id/nav_header_navigation_drawer_media"
            android:alpha="0.6"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="16dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="BASIN"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"/>
    <TextView
            android:id="@+id/nav_header_navigation_drawer_sports"
            android:alpha="0.6"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="16dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="SPOR"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"/>
    <TextView
            android:id="@+id/nav_header_navigation_drawer_multimedia"
            android:alpha="0.6"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="12dp"
            android:text="MULTİMEDYA"
            android:textSize="16dp"
            android:fontFamily="@font/arialbd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Switch
            android:alpha="0.6"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="SALT METİN MODU"
            android:textSize="16dp"
            android:fontFamily="@font/arial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nav_header_navigation_text_mode_switch"
            android:paddingRight="@dimen/activity_horizontal_margin"/>
    <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"/>
    <TextView
            android:id="@+id/nav_header_navigation_drawer_offmode"
            android:alpha="0.6"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="ÇEVRİMDIŞI MODU"
            android:textSize="16dp"
            android:fontFamily="@font/arial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"/>
    <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"/>
</LinearLayout>